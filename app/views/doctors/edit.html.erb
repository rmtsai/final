<%= form_for @doctor do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
    <%= form.label :dob %>
    <%= form.text_field :dob, class: "form-control" %>
    <%= form.label :education %>
    <%= form.text_field :education, class: "form-control" %>
    <%= form.label :years_of_experience %>
    <%= form.text_field :years_of_experience, class: "form-control" %>
    <%= form.label :specialty %>
    <%= form.text_field :specialty, class: "form-control" %>
    <%= form.label :typeofdoctor_id %>
    <%= form.collection_select :typeofdoctor_id, TypeofDoctor.all, :id, :name %>
    <%= form.label :hospital_id %>
    <%= form.collection_select :hospital_id, Hospital.all, :id, :name %>
  </div>
  <%= form.button 'Update Doctor', class: "btn btn-success" %>
<% end %>

