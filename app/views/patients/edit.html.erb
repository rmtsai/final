<%= form_for @patient do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
    <%= form.label :dob %>
    <%= form.text_field :dob, class: "form-control" %>
    <%= form.label :diagnosis %>
    <%= form.text_field :diagnosis, class: "form-control" %>
    <%= form.label :symptoms %>
    <%= form.text_field :symptoms, class: "form-control" %>
    <%= form.label :level_of_pain %>
    <%= form.text_field :level_of_pain, class: "form-control" %>
    <%= form.label :notes %>
    <%= form.text_field :notes, class: "form-control" %>
    <%= form.label :hospital_id %>
    <%= form.collection_select :hospital_id, Hospital.all, :id, :name %>
    <%= form.label :doctor_id %>
    <%= form.collection_select :doctor_id, Doctor.all, :id, :name %>
  </div>
  <%= form.button 'Update Patient', class: "btn btn-success" %>
<% end %>
